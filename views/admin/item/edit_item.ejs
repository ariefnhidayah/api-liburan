<div class="tab-pane fade show active" id="show_edit_item" role="tabpanel">
    <div class="card shadow mb-4 mt-4">
        <div class="card-body">
            <form action="/admin/item/<%= item._id %>?_method=PUT" method="POST" enctype="multipart/form-data">
                <div class="form-group row">
                    <label for="title" class="col-md-3">Title</label>
                    <input type="text" class="form-control col-md-5" name="title" id="title" required placeholder="Masukkan title" value="<%= item.title %>" />
                </div>
                <div class="form-group row">
                    <label for="price" class="col-md-3">Harga</label>
                    <input type="number" class="form-control col-md-5" id="price" name="price" required placeholder="Masukkan harga" value="<%= item.price %>" />
                </div>
                <div class="form-group row">
                    <label for="city" class="col-md-3">Kota</label>
                    <input type="text" class="form-control col-md-5" id="city" name="city" placeholder="Masukkan Kota" required value="<%= item.city %>" />
                </div>
                <div class="form-group row">
                    <label for="category" class="col-md-3">Kategori</label>
                    <select name="category_id" id="category_id" class="form-control col-md-5" required>
                        <option value="">Pilih Kategori</option>
                        <% for(let i = 0; i < categories.length; i++) { %>
                            <% var selected = (item.category_id.name == categories[i].name) ? 'selected' : '' %>
                            <option value="<%= categories[i]._id %>" <%= selected %>><%= categories[i].name %></option>
                        <% } %>
                    </select>
                </div>
                <div class="form-group row">
                    <label for="image" class="col-md-3">Gambar</label>
                    <div class="custom-file col-md-5">
                        <input type="file" class="custom-file-input" id="image" name="image" multiple>
                        <label class="custom-file-label" for="image">Pilih gambar</label>
                    </div>
                </div>
                <div class="form-group row">
                    <label for="description" class="col-md-3">Deskripsi</label>
                    <textarea name="description" id="description" cols="30" rows="5" class="form-control col-md-5"><%= item.description%></textarea>
                </div>
                <div class="form-group row">
                    <div class="col-md-3"></div>
                    <button class="btn btn-primary mr-3" type="submit">Simpan</button>
                    <a href="/admin/item" class="btn btn-info">Kembali</a>
                </div>
            </form>
        </div>
    </div>
</div>