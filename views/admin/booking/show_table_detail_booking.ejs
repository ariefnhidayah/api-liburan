<div class="card shadow mb-4 mt-4">
    <div class="card-body">
        <div class="row">
            <div class="col-md-4">
                <img src="<%= base_url + '/' + booking.payments.proof_payment %>" alt="Bukti Pembayaran" style="width: 100%; display: block;margin-bottom: 20px;" />
                <% if(booking.payments.status == "Proses") { %>
                    <form action="/admin/booking/<%= booking._id %>/confirmation?_method=PUT" method="POST" class="d-inline">
                        <button type="submit" class="btn btn-success" onclick="return confirm('Apakah ingin diterima?')"><i class="fas fa-check"></i> &nbsp;Terima</button>
                    </form>
                    <form action="/admin/booking/<%= booking._id %>/reject?_method=PUT" method="POST" class="d-inline">
                        <button type="submit" class="btn btn-danger" onclick="return confirm('Apakah ingin ditolak?')"><i class="fas fa-times"></i> &nbsp;Tolak</button>
                    </form>
                <% } %>
            </div>
            <div class="col-md-8">
                <div class="table-responsive">
                    <table class="table table-bordered" id="activity_table" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Nama Member</th>
                            <th>Total</th>
                            <th>Bank</th>
                            <th>Title</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td><%= booking.member_id.first_name %> <%= booking.member_id.last_name %></td>
                            <td>$<%= booking.total %></td>
                            <td><%= booking.payments.bank_from %></td>
                            <td><%= booking.item_id.title %></td>
                        </tr>
                    </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
<a href="/admin/booking" class="btn btn-info">Kembali</a>