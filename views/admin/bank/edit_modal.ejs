<div class="modal fade" id="edit_modal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel">Edit Bank</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
            </button>
        </div>
        <form method="POST" enctype="multipart/form-data" action="/admin/bank?_method=PUT">
            <div class="modal-body">
                    <input type="hidden" name="id" id="id">
                    <div class="form-group">
                        <label for="name_bank">Nama Bank</label>
                        <input type="text" class="form-control" id="edit_name_bank" name="name_bank" placeholder="Masukkan Nama Bank" required>
                    </div>
                    <div class="form-group">
                        <label for="account_number">Nomor Rekening</label>
                        <input type="text" class="form-control" id="edit_account_number" name="account_number" placeholder="Masukkan Nomor Rekening" required>
                    </div>
                    <div class="form-group">
                        <label for="account_name">Nama Pemilik</label>
                        <input type="text" class="form-control" id="edit_account_name" name="account_name" placeholder="Masukkan Nama Pemilik" required>
                    </div>
                    <label>Gambar</label>
                    <div class="input-group">
                        <div class="custom-file">
                            <input type="file" class="custom-file-input" id="edit_image" aria-describedby="image" name="image">
                            <label class="custom-file-label" for="image">Upload Gambar</label>
                          </div>
                    </div>
                </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Tutup</button>
                <button type="submit" class="btn btn-primary">Simpan</button>
            </div>
        </form>
        </div>
    </div>
</div>